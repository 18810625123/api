
<div class="page-header text-center">
  <p class="lead">
    目标站点管理
  </p>
</div>

<p id="notice"><%= notice %></p>

<!--计划首页-显示所有计划-->
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>网站名</th>
      <th>类别</th>
      <th>备注</th>
      <th colspan="3">操作</th>
    </tr>
    </thead>

    <tbody>
    <% @crawler_websites.each_with_index do |web, i| %>
        <tr>
          <td><%= link_to web.name, web.index_url %></td>
          <td><%= web.website_type.name %></td>
          <td><%= web.note %></td>
          <td><%= link_to '查看', web %></td>
          <td><%= link_to '修改', edit_crawler_website_path(web) %></td>
          <td><%= link_to '删除', web, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>





<br>

