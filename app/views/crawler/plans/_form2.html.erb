<%= form_tag '/crawler/plans', method:'post', class:"form-horizontal" do %>
    <div class="form-group">
      <label class='col-sm-2 control-label' for="website">来源站点:</label>
      <div class="col-sm-10">
        <%= select_tag "website", options_for_select(['51job','Boss','拉勾']), class:'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class='col-sm-2 control-label' for="url">目标URL:</label>
      <div class="col-sm-10">
        <%= text_area_tag :url, params[:url], style: 'width:100%;height:160px;', placeholder: '要抓取的页面URL,例:http://search.51job.com/list/000000,000000,0000,00,3,07%252C08%252C09%252C10%252C11,%25E9%25A6%2596%25E5%25B8%25AD%25E6%258A%2580%25E6%259C%25AF%25E5%25AE%2598,2,PAGE.html?lang=c&stype=1&postchannel=0000&workyear=02%2C03%2C04&cotype=03%2C04%2C05%2C10%2C11&degreefrom=03%2C04%2C05%2C06&jobterm=99&companysize=99&lonlat=0%2C0&radius=-1&ord_field=0&confirmdate=9&fromType=&dibiaoid=0&address=&line=&specialarea=00&from=&welfare=' %>
      </div>
    </div>
    <div class="form-group">
      <label class='col-sm-2 control-label' for="name">计划名称:</label>
      <div class="col-sm-10">
        <%= text_field_tag :name, params[:name], class:'w_100', placeholder: '给URL条件取名称,例:"全国-标题(销售)-工资(1~2万)-发布日期(近一月)-公司性质(民营~创业~上市)"' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag "创建",class:'btn btn-default' %>
      </div>
    </div>
<% end %>