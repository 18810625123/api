<%= form_for crawler_plan, html:{class:"form-horizontal"} do |form| %>

    <% if crawler_plan.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(crawler_plan.errors.count, "error") %> 保存失败,原因如下:</h2>

          <ul>
            <% crawler_plan.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= form.label '来源站点',class:'col-sm-2 control-label', for:'source' %>
      <div class="col-sm-10">
        <%= form.select :website_id, Crawler::Website.all.map{|w| [w.name, w.id]}, class:'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label '计划名称',class:'col-sm-2 control-label', for:'name' %>
      <div class="col-sm-10">
        <%= form.text_field :name, id: :name, class:'w_100', placeholder: '给URL条件取名称,例:"全国-标题(销售)-工资(1~2万)-发布日期(近一月)-公司性质(民营~创业~上市)"' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label '备注',class:'col-sm-2 control-label', for:'note' %>
      <div class="col-sm-10">
        <%= form.text_area :note, id: :note, style: 'width:100%;height:100px;', placeholder: '输入备注,比如说这个采集计划的目的,未来将如何分析这些数据的策略等' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label '目标URL',class:'col-sm-2 control-label', for:'url' %>
      <div class="col-sm-10">
        <%= form.text_area :url, id: :url, style: 'width:100%;height:160px;', placeholder: '要抓取的页面URL,例:http://search.51job.com/list/000000,000000,0000,00,3,07%252C08%252C09%252C10%252C11,%25E9%25A6%2596%25E5%25B8%25AD%25E6%258A%2580%25E6%259C%25AF%25E5%25AE%2598,2,PAGE.html?lang=c&stype=1&postchannel=0000&workyear=02%2C03%2C04&cotype=03%2C04%2C05%2C10%2C11&degreefrom=03%2C04%2C05%2C06&jobterm=99&companysize=99&lonlat=0%2C0&radius=-1&ord_field=0&confirmdate=9&fromType=&dibiaoid=0&address=&line=&specialarea=00&from=&welfare=' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label '总页数',class:'col-sm-2 control-label', for:'page' %>
      <div class="col-sm-10">
        <%= form.number_field :page, id: :page %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit submit_name,class:'btn btn-default' %>
      </div>
    </div>

<% end %>



